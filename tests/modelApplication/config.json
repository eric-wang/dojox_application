{
	"id": "modelApp",
	"name": "Model App",
	"description": "A modelApp",
	"splash": "splash",

	"dependencies": [
		"dojox/mobile/_base",
		"dojox/mobile/TabBar",
		"dojox/mobile/RoundRect",
		"dojox/mobile/TabBarButton",
		"dojox/mobile/Button",
		"dojox/mobile/RoundRect",
		"dojox/mobile/Heading",
		"dojox/mvc/StatefulModel",
		"dojox/mvc/EditStoreRefController",
		"dojox/mvc/EditStoreRefListController",
		"dojo/store/Memory",
		"dojox/mvc/Group",
        "dojox/mvc/Repeat",
        "dojox/mvc/Output",
		"dojox/mobile/deviceTheme",        
        "dojox/mvc"
	],

	// Modules for the application.  The are basically used as the second
	// array of mixins in a dojo.declare().  Modify the top level behavior
	// of the application, how it processes the config or any other life cycle
	// by creating and including one or more of these
	"controllers": [
		"dojox/application/controllers/mvcModel"
	],
	
	"modules": [
		"dojox/application/module/lifecycle"
	],

	//stores we are using 
	"stores": {
	   "namesStore":{
	       "type": "dojo.store.Memory",
		   "params": {
		      "data": "modelApp.names"
		   }
	   },
       "repeatStore":{
           "type": "dojo.store.Memory",
           "params": {
                "data": "modelApp.repeatData"
           }
       }
	},

	//models and instantiation parameters for the models. Including 'type' as a property allows
	//one to overide the class that will be used for the model.  By default it is dojox/mvc/model
	"models": {
	  		 	"names": {
					"type": "dojox/mvc/EditStoreRefController",
					"params":{
		     		 	"store": {"$ref":"#stores.namesStore"}
		  		 	}	       
				}
	}, 

	//the name of the scene to load when the app is initialized.
	"defaultView": "home", 

	"defaultTransition": "slide",
	//scenes are groups of views and models loaded at once	
	"views": {

		"home": { 
			"type": "dojox.app.view",
			"dependencies":["dojox/mobile/ListItem","dojox/mobile/RoundRectList","dojox/mobile/RoundRectCategory","dojox/mobile/Heading"],
			"template": "views/main.html",
			"assistant": "assistants/home.js"
		},

		"simple":{
			"template": "views/simple.html",
			"assistant": "assistants/simple.js",		
			"models": {}, 
			"dependencies":["dojox/mobile/TextBox"]
		},

		"repeat": {
            "type": "dojox.app.view",
            "template": "views/repeat.html",
			"assistant": "assistants/repeat.js",
            "dependencies":["dojox/mobile/TextBox"],
            "models": {
				"repeatmodels": {
					"type": "dojox/mvc/EditStoreRefListController",
             		"params":{
             			"store": {"$ref":"#stores.repeatStore"}
             		}           
             	}           
	   		}            
		},

		"generate": {
            "type": "dojox.app.view",
            "template": "views/generate.html",
			"assistant": "assistants/generate.js",
            "dependencies":["dojox/mobile/TextBox", "dojox/mobile/TextArea", "dojox/mvc/Generate"],
		}
	}	
}
